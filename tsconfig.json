{
  "extends": ["@tsconfig/node18/tsconfig.json", "@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    // Output
    "noEmit": true,
    "sourceMap": true,

    // Modules
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["src/*"]
    },

    // Typechecking
    "noImplicitThis": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"]
}
