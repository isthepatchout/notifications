{
  "extends": ["@tsconfig/node21/tsconfig.json", "@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    // Output
    "noEmit": true,
    "sourceMap": true,

    // Modules
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["src/*"],
    },

    // Typechecking
    "noImplicitThis": true,
    "types": ["node"],
  },
  "include": ["src/**/*.ts"],
}
